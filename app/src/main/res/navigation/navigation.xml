<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/locationUpdateFragment">

    <fragment
        android:id="@+id/locationUpdateFragment"
        android:name="com.alkempl.rlr.ui.LocationUpdateFragment"
        android:label="LocationUpdateFragment"
        tools:layout="@layout/fragment_location_update">
        <action
            android:id="@+id/action_locationUpdateFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:launchSingleTop="true" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.alkempl.rlr.SettingsFragment"
        android:label="SettingsFragment" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.alkempl.rlr.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
</navigation>